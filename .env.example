# =============================================================================
# Ligant.ai â€” Environment Variables
# Copy to .env and fill in values
# =============================================================================

# --- Environment ---
ENVIRONMENT=local  # local | cloud

# --- Anthropic ---
ANTHROPIC_API_KEY=sk-ant-...

# --- Backend (DGX Spark) ---
BACKEND_URL=http://localhost:8000
BACKEND_API_KEY=change-me-to-a-secure-random-string

# --- Backend Paths (DGX Spark only) ---
RFDIFFUSION_DIR=/path/to/RFdiffusion
RFDIFFUSION_MODEL_DIR=/path/to/models
UPLOAD_DIR=/path/to/uploads
OUTPUT_DIR=/path/to/outputs

# --- Database (Cloud SQL or local) ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=ligant
DB_PASSWORD=change-me
DB_NAME=ligant

# Cloud SQL (only when ENVIRONMENT=cloud)
CLOUD_SQL_INSTANCE=project-id:region:instance-name

# --- JWT ---
JWT_SECRET_KEY=generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRY_DAYS=7

# --- ngrok (DGX Spark only) ---
NGROK_AUTH_TOKEN=your-ngrok-auth-token
